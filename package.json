{
  "name": "deepsigh",
  "displayName": "deepsigh",
  "description": "ai chat using deepseek r1 7b",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand: deepsigh.chat",
    "onView: deepsigh-sidebar",
    "onView: deepsigh-webview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "deepsigh-sidebar-view",
          "title": "deepsigh",
          "icon": "./src/media/chat-icon.svg"
        }
      ]
    },
    "views": {
      "deepsigh-sidebar-view": [
        {
          "type": "webview",
          "id": "deepsigh-sidebar",
          "name": "deepsigh",
          "icon": "./src/media/chat-icon.svg",
          "contextualTitle": "deepsigh"
        }
      ],
      "explorer": [
        {
          "id": "deepsigh-webview",
          "name": "DeepSeek Sidebar",
          "icon": "./src/media/chat-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "deepsigh.chat",
        "category": "deepsigh",
        "title": "Chat"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MarkMalihan/deepsigh-local-chat"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.3",
    "autoprefixer": "^10.4.20",
    "ollama": "^0.5.12",
    "postcss": "^8.5.1"
  }
}
